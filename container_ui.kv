#:kivy 2.1.0
#:import hsv_to_rgb colorsys.hsv_to_rgb
#:import rgb_to_hsv colorsys.rgb_to_hsv

BoxLayout:
    orientation: 'vertical'
    padding: 30
    spacing: 20
    
    # Mode 2: Checkout Container Section
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.5
        padding: 20
        
        # Title Label
        Label:
            text: "Checkout Container"
            font_size: 24
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + 10
            halign: 'center'
        
        # Container Serial Number
        Label:
            text: "Enter Container Serial Number:"
            font_size: 18
        TextInput:
            id: container_serial_input
            font_size: 18
            multiline: False
            size_hint_y: None
            height: 30
            hint_text: "e.g. Container-123"
        
        # User Badge ID
        Label:
            text: "Enter User Badge ID:"
            font_size: 18
        TextInput:
            id: user_badge_input
            font_size: 18
            multiline: False
            size_hint_y: None
            height: 30
            hint_text: "e.g. 12345"
        
        # Checkout Button
        Button:
            text: "Checkout Container"
            font_size: 18
            size_hint_y: None
            height: 40
            on_press: app.checkout_container(container_serial_input.text, user_badge_input.text)
        
        # Checkout Status
        Label:
            id: checkout_status
            text: ""
            font_size: 18
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1] + 10

    # Mode 3: Return Container Section
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.5
        padding: 20

        # Title Label
        Label:
            text: "Return Container"
            font_size: 24
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + 10
            halign: 'center'

        # Container Serial Number
        Label:
            text: "Enter Container Serial Number:"
            font_size: 18
        TextInput:
            id: return_container_serial_input
            font_size: 18
            multiline: False
            size_hint_y: None
            height: 30
            hint_text: "e.g. Container-123"
        
        # Return Button
        Button:
            text: "Return Container"
            font_size: 18
            size_hint_y: None
            height: 40
            on_press: app.return_container(return_container_serial_input.text)
        
        # Return Status
        Label:
            id: return_status
            text: ""
            font_size: 18
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1] + 10
